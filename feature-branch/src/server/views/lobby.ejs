<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>GlitchVerse - Lobby</title>
  <%- include('shared/head') %>
  <script src="/js/lobby.js" defer></script>
  <script src="/js/friends.js" defer></script>  
</head>

<body id="lobby">
  <nav class="navbar">
    <div class="nav-brand">
      <a href="/">GlitchVerse</a>
    </div>
    <%- include('shared/nav') %>
  </nav>

  <div class="container">
    <div class="content-wrapper">
      <div class="games-section">
        <div class="games-list-container">
          <h2>My Games</h2>
          <ul id="my-games"></ul>

          <h2>Join a New Game</h2>
          <ul id="available-games"></ul>
        </div>
      </div>

      <div class="side-panel">
        <div class="social-entry">
          <button id="social-button" class="btn-primary">
            <i class="nf nf-md-account_group"></i>
            <span>social center</span>
          </button>
        </div>

        
        <div class="chat-container">
          <div class="chat-header">
            <button id="create-game-button">Create Game</button>
          </div>
          <div class="chat-content">
            <%- include('shared/chat') %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('shared/templates') %>
  <%- include("games/create-form") %>
  <%- include("user/social-center-modal") %> 
</body>
</html>