<!DOCTYPE html>
<html>

<head>
    <title>GlitchVerse - gaming platform</title>
    <%- include('shared/head') %>
</head>

<body>
    <nav class="navbar">
        <div class="nav-brand">
            <a href="/">GlitchVerse</a>
        </div>
        <div class="nav-menu">
        </div>
        <%- include('shared/nav') %>
    </nav>

    <main class="game-grid">
        <% games.forEach(game=> { %>
            <div class="game-card">
                <img src="/uploads/gameCovers/<%= game.id %>.png" alt="<%= game.name %>">
                <h3>
                    <%= game.name %>
                </h3>
                <p>
                    <%= game.description %>
                </p>
                <a href="<%= user ? '/lobby' : '/auth/login' %>" class="play-btn">
                    <% if (game.status === 'available') { %>
                        Start Game
                      <% } else { %>
                        Coming Soon
                      <% } %>
                    </a>
            </div>
            <% }); %>
    </main>
</body>

</html>