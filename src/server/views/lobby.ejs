<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>GlitchVerse - Lobby</title>
  <%- include('shared/head') %>
    <script src="/js/lobby.js" defer></script>
</head>

<body id="lobby">
  <nav class="navbar">
    <div class="nav-brand">
      <a href="/">GlitchVerse</a>
    </div>
    <div class="nav-menu">
    </div>
    <div class="search-bar">
      <input type="text" placeholder="Search...">
      <button type="submit">üîç</button>
    </div>
    <%- include('shared/nav') %>
  </nav>

  <div id="container">
    <div id="content">
      <section id="games-listing">
        <h2>My games</h2>
        <ul id="my-games">
        </ul>

        <h2>Join a new game</h2>
        <ul id="available-games">
        </ul>
      </section>

      <div class="chat-container">
        <div class="chat-header">
          <button id="create-game-button">Create Game</button>
        </div>
        <div class="chat-content">
          <%- include('shared/chat') %>
        </div>
      </div>
    </div>

    <%- include('shared/templates') %>
    <%- include("games/create-form") %>
  </div>
</body>
</html>